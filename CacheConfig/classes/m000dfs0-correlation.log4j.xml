<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] [%c{1}]: %m %throwable %n" />
		</layout>
	</appender>

	<appender name="FILE_MAIN" class="org.apache.log4j.rolling.RollingFileAppender">
		<!-- Override file every run -->
		<param name="Append" value="true" />

		<param name="ImmediateFlush" value="true" />

		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="activeFileName" value="/media/04-nereus-logs/core/dfs/m000dfs0-correlation.log" />
			<!-- Roll every hour - overwrite every month -->
			<param name="fileNamePattern" value="/media/04-nereus-logs/core/dfs/m000dfs0-correlation_%d{dd-HH}.log" />
		</rollingPolicy>

		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] [%c{1}]: %m %throwable %n" />
		</layout>

	</appender>

	<logger name="org.quartz">
		<level value="error" />
	</logger>

	<logger name="com.leonardo.m000dfs0.co.dao.SchedulerImplDAO">
		<level value="error" />
	</logger>

	<logger name="org.springframework">
		<level value="error" />
	</logger>

	<root>
		<level value="ERROR" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE_MAIN" />
	</root>
</log4j:configuration>
